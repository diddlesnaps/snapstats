{
  "functions": {
    "predeploy": [
      "npm install",
      "npm run build",
      "npm prune --production"
    ],
    "source": ".",
    "ignore": [
      ".git/**",
      "cypress",
      "src/**"
    ]
  },
  "hosting": {
    "public": "static",
    "rewrites": [
      {
        "source": "/graphql",
        "function": "graphql"
      },
      {
        "source": "**",
        "function": "server"
      }
    ]
  }
}

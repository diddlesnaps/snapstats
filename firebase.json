{
  "functions": {
    "source": "__sapper__/build",
    "ignore": [
      ".package*.json",
      ".runtimeconfig.json"
    ],
    "predeploy": "sed -i \\'s^const build_dir = \"\\.\"^const\\ build_dir = \"__sapper__/build\"^\\' __sapper__/build/server/server.js"
  },
  "hosting": {
    "public": "static",
    "rewrites": [
      {
        "source": "/graphql",
        "function": "graphql"
      },
      {
        "source": "**",
        "function": "server"
      }
    ],
    "redirects": [
      {
        "source": "/snapstatsorg/us-central1/server/client/:asset",
        "destination": "/client/:asset",
        "type": "302"
      },
      {
        "source": "/snapstatsorg/us-central1/server/favicons/:asset",
        "destination": "/favicons/:asset",
        "type": "301"
      },
      {
        "source": "/snapstatsorg/us-central1/server/:asset",
        "destination": "/:asset",
        "type": "301"
      }
    ]
  }
}
